<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/background"
        android:padding="15dp"
        android:layout_height="match_parent"
        tools:context=".MainGameActivity">

    <TextView
            android:id="@+id/txtTimer"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/time"
            android:text="00"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:layout_alignParentRight="true"
            fontPath="fonts/custom_font.otf"
            android:gravity="left|center"/>

    <TextView
            android:id="@+id/txtScore"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/score"
            android:textColor="@color/white"
            android:text="0"
            fontPath="fonts/custom_font.otf"
            android:gravity="center"/>

    <TextView
            android:id="@+id/txtRandomNumber"
            android:layout_width="match_parent"
            android:layout_marginTop="80dp"
            android:layout_height="120dp"
            android:layout_marginRight="40dp"
            android:textSize="40sp"
            android:layout_marginLeft="40dp"
            tools:text="Hello World!"
            fontPath="fonts/custom_font.otf"
            android:background="@drawable/number"
            android:gravity="center"/>

    <EditText
            android:layout_below="@id/txtRandomNumber"
            android:id="@+id/edtEnteredAnswer"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/input"
            android:maxLength="4"
            fontPath="fonts/custom_font.otf"
            android:inputType="number"
            android:layout_marginTop="20dp"
            android:gravity="center"/>

    <ImageView
            android:id="@+id/imgThumbsUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/shape_white_rect"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:src="@drawable/thumbs_up"/>

    <ImageView
            android:id="@+id/imgThumbsDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_rect"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:src="@drawable/thumbs_down"/>
</RelativeLayout>